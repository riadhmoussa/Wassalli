<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Credit_Card">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="25dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@android:drawable/editbox_background"
                    android:ems="10"
                    android:paddingTop="9dp"
                    android:paddingBottom="9dp"

                    android:text="Permis de Conduite"
                    android:textAlignment="center"
                    android:textColor="#ff1a102c"
                    android:textSize="10dp" />

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@android:drawable/editbox_background"
                    android:ems="10"
                    android:entries="@array/Type_Permis"
                    android:paddingTop="9dp"
                    android:paddingBottom="9dp"
                    android:prompt="@string/country__prompt"

                    android:textAlignment="center"
                    android:textColor="#ff1a102c"
                    android:textSize="20dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@android:drawable/editbox_background"
                    android:ems="10"
                    android:paddingTop="9dp"
                    android:paddingBottom="9dp"

                    android:text="Type de vÃ©hicule"
                    android:textAlignment="center"
                    android:textColor="#ff1a102c"
                    android:textSize="10dp" />

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@android:drawable/editbox_background"
                    android:ems="10"
                    android:entries="@array/Type_vehicule"
                    android:paddingTop="9dp"
                    android:paddingBottom="9dp"
                    android:textAlignment="center"
                    android:textColor="#ff1a102c"
                    android:textSize="20dp" />

            </LinearLayout>


            <com.braintreepayments.cardform.view.CardForm
                android:id="@+id/card_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnBuy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorAccent"
                android:text="Acheter maintenant"
                android:textColor="@android:color/white" />

        </LinearLayout>


    </ScrollView>



</RelativeLayout>